<h1>Pets of <%=@household.name%></h1>

<% if @household.pets.empty?%>
    This household current has no pets.
  <%else%>
    <ul>
    <%@household.pets.each do |pet|%>
     <li><a href="/pets/<%=pet.id%>"><%=pet.name%></a></li>
    <%end%>
    </ul>
  <%end%>
<br>
<br>
<a href="/pets/new">Add Pets</a>
<br>
<br>
<%if @household.owner_id == current_user.id %>
  <a href="/households/<%=@household.id%>/edit">Edit this Household.</a>
  <form method="post" action="/households/<%= @household.id %>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="delete"> 
  </form>
<%else%>
  <a href="/users/edit">Remove This House From My Households</a>
<%end%>




