<h1><%= @user.username %>'s Critter Sitter Homepage</h1>

<h3>Your Household(s):</h3>
    <ul>
    <%@households.each do |household|%>
    <li> • <a href="/households/<%=household.id%>"><%= household.name %></a></li>
    <%end%>
    </ul>
<br>
<form action="/households/new" method="get">
<input type="submit" value="Create a New Household">
<br>
<br>
<br>
<h3>Your Pet(s):</h3>
    <ul>
    <%@pets.each do |pet|%>
        <%if pet.owner_id == @user.id%>
    <li> • <a href="/pets/<%=pet.id%>"><%= pet.name %></a></li>
        <%end%>
    <%end%>
    </ul>
<br>
<form action="/pets/new" method="get">
<input type="submit" value="Create a New Pet">
</form>

