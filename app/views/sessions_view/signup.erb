<% if @user && @user.error.full_messages.length > 0%>
    <h3> <%= @user.errors.full_messages.to_sentence %>
<%end%>

<h2> Signup to Create or Join a Household of Critters: </h2>

<form action="/signup" method="post">
<p>Create a username and password.</p>
    <label for="username"> Username: </label>
    <input id="username" type="text" name="user[username]"><br>
    <label for="password"> Password: </label>
    <input id="password" type="password" name="user[password]"><br><br>

    <p>Select an existing Household or create a new one below.</p>
        
    
    <h3>Existing Households</h3>
    <% @households.each do |household| %>
        <input type="checkbox" name="user[household_id]" id="<%= household.id %>" value="<%= household.id %>"><%= household.name %></input><br>
    <% end %>
    <br>
    
    <h3>New Household</h3>
    <label>Household Name: </label>
    <br>
    <input type="text" name="household[name]" id="household_name"></input>
    <br><br>

        <input type="submit" value="Sign Up">
</form>
