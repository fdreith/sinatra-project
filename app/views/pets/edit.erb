<form action="/pets/<%=@pet.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">

<h2> Update Pet</h2>

    <label>Update Pet Name: </label>
    <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
    <br>
    <label>Update Pet Species: </label>
    <input type="text" name="pet[species]" id="pet_species" value="<%=@pet.species%>">
    <br><br>
    <h4>Update Your Pet's Household (only check one box)</h4>
    <br>
        <% current_user.households.each do |household| %>
        <li><input type="checkbox" name="pet[household_id]" id="<%= household.id %>" value="<%= household.id %>"><%=household.name %></li>
        <br>
    <% end %>
    <br>
    <input type="submit" value="Update Household">
    <br>
    
    </form>
    <form method="post" action="/pets/<%= @pet.id %>/delete"><br>
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Pet"> 
    </form>
