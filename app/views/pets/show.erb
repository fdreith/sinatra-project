<h1><%=@pet.name%></h1>
<h4>Species: <%=@pet.species%> </h4>
<br>
<h4>Household: <%=@household.name%> </h4>
<br>
<ul>
<h4><%=@pet.name%>'s Events:</h4>
<% if @pet.events.empty?%>
    <p> This pet has no events, <%=@pet.name%> might need some attention. </p>
  <%else%>
    <ul>
    <%@pet.events.each do |event|%>
      <a href="/events/<%=event.id%>/edit"><%=event.event_type%></a>  at  <%=event.created_at%>
      <br>
    <%end%>
    </ul>
  <%end%>
  
</ul>
<br>
<form method="post" action="/events"> 
  <label>Add an Event:</label>
  <input type="text" name="event" id="event">
  <input type="hidden" value="<%=@pet.id%>" name="pet_id" />
  <input type="submit" value="Submit">
</form>
<br>
<%if current_user.household_ids.include?(@pet.household_id) %>
<a href="/pets/<%=@pet.id%>/edit">Edit Pet</a>

<form method="post" action="/pets/<%= @pet.id %>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="delete"> 
</form>
<%end%>





